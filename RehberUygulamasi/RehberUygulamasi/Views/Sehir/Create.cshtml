@model RehberUygulamasi.Models.Sehir

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Şehir Ekle</h1>

<h4>Sehir</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SehirAdi" class="control-label"></label>
                <input asp-for="SehirAdi" class="form-control" />
                <span asp-validation-for="SehirAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SehirKodu" class="control-label"></label>
                <input asp-for="SehirKodu" class="form-control" />
                <span asp-validation-for="SehirKodu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye geri dön</a>
</div>

